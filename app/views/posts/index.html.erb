<h1 class="text-center">All blog posts</h1>


	<% @posts.each do |post| %>
		<div class="row">
			<div class="col-xs-8 col-xs-offset-2">    
			   <div class="well well-lg"> 
				   <div class="article-title">  
				     <%= link_to post.title, post_path(post) %>
				     	
				   </div>

				   <div class="article-body">  
				     <%= truncate(post.content, length: 75) %>
				   </div>

					<div class="article-actions">
						<%= link_to "Edit this post", edit_post_path(post), class: "btn btn-xs btn-warning" %>
						<%= link_to "Delete this post", post_path(post), class: "btn btn-xs btn-danger", method: :delete, data: { confirm: "Are you sure?" } %>
					</div>
			    </div>
			</div>    
		</div>
	<% end %>
	


